<article id="blog">
  <div id="title">
    <h1>{{title}}</h1>
    <p>{{bloginfo}}</p>
    </div>
    <div class="meta">
    <p>Posted by {{user.username}} on {{created_at}}</p>
    </div>
</article>
{{#if logged_in}}
<form id="comment-form">
  <textarea id="comment-text" placeholder="Your comment" required></textarea>
  <button type="submit">Add Comment</button>
</form>
{{else}}
<p><a href="/login">Login</a> to add a comment</p>
{{/if}}
<div id="comments">
  {{#each comments}}
  <div>
    <p>{{this.comment_text}}</p>
    <p>Posted by {{this.user.username}} on {{this.created_at}}</p>
  </div>
  {{/each}}
</div>
<script src="/js/comment.js"></script>