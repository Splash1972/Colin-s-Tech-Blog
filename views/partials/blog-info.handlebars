<article class="border border-black rounded">
    <div>
        <h3>{{title}}</h3>
    </div>
    <div>
        <p>
            {{bloginfo}}
        </p>
    </div>
    <div class="meta">
        Posted by: {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/blog/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>